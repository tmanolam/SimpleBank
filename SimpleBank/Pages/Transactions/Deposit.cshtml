@page
@model SimpleBank.Pages.Transactions.DepositModel
@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.BankAccountID" class="control-label"></label>
                <input readonly asp-for="Transaction.BankAccountID" class="form-control" value="@Model.BankAccount.BankAccountID" />
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" />
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/BankAccounts/Details" asp-route-id="@Model.BankAccount.BankAccountID">Back to Account</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

