@page
@model SimpleBank.Pages.BankAccounts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankAccount.BankAccountID" class="control-label"></label>
                <input asp-for="BankAccount.BankAccountID" class="form-control" />
                <span asp-validation-for="BankAccount.BankAccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.UserID" class="control-label"></label>
                <input readonly asp-for="BankAccount.UserID" class="form-control" value="@Model.User.UserID"/>
                <!--select asp-for="BankAccount.UserID" class="form-control" asp-items="ViewBag.UserID"></!select-->
            </div>
            <div class="form-group">
                <input hidden asp-for="BankAccount.Balance" class="form-control" value="0" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Users/Details" asp-route-id="@Model.User.UserID">Back to User Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
