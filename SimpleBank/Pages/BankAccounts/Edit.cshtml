@page
@model SimpleBank.Pages.BankAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankAccount.BankAccountID" class="control-label"></label>
                <input readonly asp-for="BankAccount.BankAccountID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.UserID" class="control-label"></label>
                <input readonly asp-for="BankAccount.UserID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Balance" class="control-label"></label>
                <input readonly asp-for="BankAccount.Balance" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Users/Details" asp-route-id="@Model.BankAccount.UserID">Back to User Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
