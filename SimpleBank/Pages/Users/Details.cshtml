@page
@model SimpleBank.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BankAccounts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>IBAN</th>
                        <th>Balance</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.User.BankAccounts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BankAccountID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td>
                                <a asp-page="/BankAccounts/Details" asp-route-id="@item.BankAccountID">Details</a> |
                                <a asp-page="/BankAccounts/Delete" asp-route-id="@item.BankAccountID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/BankAccounts/Create" asp-route-id="@Model.User.UserID">Add Bank Account</a>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.UserID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
